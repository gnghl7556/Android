<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bike_project.speedActivity">

    <EditText
        android:id="@+id/etOrigin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/start_edit" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/map_recyclerview1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="@string/end_edit" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/map_recyclerview2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFindPath"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.2"
            android:background="@color/black"
            android:text="경로 찾기"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/myFindPath"
            android:layout_width="13dp"
            android:layout_height="50dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="0.5"
            android:background="@color/black"
            android:text="현재위치로 지정"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/myMapPath"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="0.5"
            android:background="@color/black"
            android:text="지도에서 검색"
            android:textColor="@color/white" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="559dp">

        <net.daum.mf.map.api.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="558dp" />

        <Button
            android:id="@+id/mypositions"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:onClick="positions"
            android:src="@drawable/position"
            tools:ignore="OnClick,SpeakableTextPresentCheck" />
    </FrameLayout>
</LinearLayout>
